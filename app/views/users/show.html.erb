
    <div class="card col-5 mb-2 bg-light">

      <div class="card-body row p-2">
        <p class="card-text font-weight-bold">Name:
        </p>
        <%= @user.full_name %>
      </div>
      <div class="card-body row p-2">
        <p class="card-text font-weight-bold">Email:
        </p><%= @user.email %>
      </div>
      <div class="card-body row p-2">


      </div>
      <% if current_user.already_following?(@user.id)%>
        <p class="font-weight-bold">You are already following</p>
      <% else %>
        <div class="card-body row p-2">
          <%= link_to 'Follow friend', friendships_path(id: @user.id), class:"btn btn-outline-primary", method: :post%>
        </div>
      <% end %>

    </div>

  <div class="col-5 p-0">
    <%= render "layouts/messages.html.erb"%>
  </div>

  <% if @tracked_stocks.present? %>
  <%= render 'stocks/list_stocks.html.erb'%>
  <% else %>
  <p>This user is not tracking any stocks</p>

  <% end %>
