<h1>My Friends</h1>

<div class="search-area">
  <h3>Search friends</h3>

  <%= form_tag search_friends_path, remote: true, method: :get do %>
  <div class="form-group row">
    <div class="col-3">
      <%= text_field_tag :query, params[:query], placeholder: "Name or email", autofocus: true, class: "form-control"%>
    </div>
    <div>
      <%= button_tag type: :submit, class: "btn btn-primary" do%>
      <%= fa_icon "search"%>
    <% end %>
  </div>
</div>
<% end %>

</div>

<div id="friend-results">

</div>

<% if @following.present? %>
<%= render 'friends/list_friends.html.erb'%>

<% end %>
