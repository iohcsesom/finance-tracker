<h1>My Portfolio</h1>
<div class="search-area">
  <h3>Search stocks</h3>

  <%= form_tag search_stock_path, remote: true, method: :get do %>
  <div class="form-group row">
    <div class="col-3">
      <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control"%>
    </div>
    <div>
      <%= button_tag type: :submit, class: "btn btn-primary" do%>
      <%= fa_icon "search"%>
    <% end %>
  </div>
</div>
<% end %>

</div>

<div id="results">

</div>

<% if @tracked_stocks.present? %>
<%= render 'stocks/list_stocks.html.erb'%>

<% end %>
